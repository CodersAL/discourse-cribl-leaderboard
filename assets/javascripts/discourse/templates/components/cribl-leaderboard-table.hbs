{{conditional-loading-spinner condition=isLoading}}
{{#if leaderboard}}
  {{#load-more selector='.cribl-leaderboard-list tr' action=loadMore}}
    <table class='table grid cribl-leaderboard-list'>
      <thead>
        {{table-header-toggle
          field='rank'
          labelKey='cribl_leaderboard.fields.rank'
          automatic=true
        }}
        {{table-header-toggle
          field='name'
          labelKey='cribl_leaderboard.fields.name'
          automatic=true
        }}
        {{table-header-toggle
          field='points'
          labelKey='cribl_leaderboard.fields.points'
          automatic=true
        }}
      </thead>
      <tbody>
        {{#each leaderboard as |item|}}
          {{cribl-leaderboard-table-row item=item isTodays=isTodays}}
        {{/each}}
      </tbody>
    </table>
  {{/load-more}}
{{else}}
  <p>{{i18n 'cribl_leaderboard.no_results'}}</p>
{{/if}}
